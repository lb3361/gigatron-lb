/* INPUT PINS */

PIN 1   =  CTRLCLK;
PIN 2   =  !PORTADDRI;
/* PIN 3 */
/* PIN 4 */
PIN 5   =  A4;
PIN 6   =  A3;
PIN 7   =  A2;
PIN 8   =  A1;
PIN 9   =  A0;
PIN 10  =  !OE;
PIN 11  =  !WE;
PIN 13  =  A15;


/* OUTPUT PINS */

PIN 14  =  SCLK;
PIN 15  =  !OEPORT;
PIN 16  =  !OERAM;
PIN 17  =  !WERAM;
PIN 18  =  !SS0;
PIN 19  =  SCK0;
PIN 20  =  !SS1;
PIN 21  =  SCK1;
PIN 22  =  DEVCLKOUT;
PIN 23  =  CTRLCLKOUT;


/* CLOCKS */

SPECIALCODE = !A3 & !A2;
CTRLCLKOUT = OE & WE & !SPECIALCODE;
DEVCLKOUT = OE & WE & SPECIALCODE;

/* SPI STATE */

SCLK.D = A0;
SCLK.AR = 'b'0;
SCLK.SP = 'b'0;

SS0.D = !A2;
SS0.AR = 'b'0;
SS0.SP = 'b'0;

SCK0.D = (A0 & A3) $ !A4;
SCK0.AR = 'b'0;
SCK0.SP = 'b'0;

SS1.D = !A3;
SS1.AR = 'b'0;
SS1.SP = 'b'0;

SCK1.D = (A0 & A2) $ !A4;
SCK1.AR = 'b'0;
SCK1.SP = 'b'0;

/* RAM AND PORT CONTROL */

PORTSEL = PORTADDRI & !A4 & !A3 & !A2 & !A1 & !A0 & SCLK;
OEPORT = OE & PORTSEL;
OERAM = OE & !PORTSEL;
WERAM = WE & !OE;

